            </div>
        </div>
    </div>

    <div class="table_item">
        <div class="table_question">
            <input disabled="@_isDisabled" @onchange="() => UpdateIntData(nameof(_dirModel.pT2Q4P14), nameof(_dirModel.intT2Q4P14))" type="checkbox" name="checkbox" />
